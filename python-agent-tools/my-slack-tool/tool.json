{
    "id": "slack-tool",
    "meta": {
        "icon": "fab fa-slack",
        "label": "Slack Workspace Tool (Unofficial)",
        "description": "Interact with Slack workspace to list channels, get users and user profiles"
    },
    "params": [
        {
            "name": "slack_auth_settings",
            "label": "Slack Authentication Settings",
            "type": "PRESET",
            "parameterSetId": "slack-auth-settings"
        },
        {
            "name": "logging_level",
            "label": "Logging Level",
            "type": "SELECT",
            "description": "The level of logging that the tool generates",
            "mandatory": true,
            "selectChoices": [
                {
                    "value": "DEBUG",
                    "label": "DEBUG"
                },
                {
                    "value": "INFO",
                    "label": "INFO"
                },
                {
                    "value": "WARNING",
                    "label": "WARNING"
                },
                {
                    "value": "ERROR",
                    "label": "ERROR"
                },
                {
                    "value": "CRITICAL",
                    "label": "CRITICAL"
                }
            ],
            "defaultValue": "INFO"
        }
    ]
}
