{
    "meta": {
        "label": "Slack Integration",
        "description": "This webapp enables integration with Slack using either Socket Mode or Events API via HTTP endpoint",
        "icon": "fab fa-slack"
    },

    "baseType": "STANDARD",
    "hasBackend": "true",
    "noJSSecurity": "true",
    "backendAPIAccessEnabled": "true",
    "standardWebAppLibraries": ["dataiku"],
    "hideWebAppConfig": "true",
    "paramsPythonSetup": "params_helper.py",
    "params": [
        {
            "name": "slack_auth_settings",
            "label": "Slack Authentication Settings",
            "type": "PRESET",
            "parameterSetId": "slack-auth-settings"
        },
        {
            "type": "SELECT",
            "name": "mode",
            "label": "Integration Mode",
            "selectChoices": [
                {
                    "value": "socket",
                    "label": "Socket Mode"
                },
                {
                    "value": "http",
                    "label": "HTTP Endpoint"
                }
            ],
            "defaultValue": "socket",
            "mandatory": true
        },
        {
            "name": "llm_id",
            "type": "SELECT",
            "label": "LLM",
            "description": "The LLM to use for the Slack integration",
            "mandatory": true,
            "getChoicesFromPython": true
        },
        {
            "type": "SELECT",
            "name": "logging_level",
            "label": "Logging level",
            "selectChoices": [
                {
                    "value": "DEBUG",
                    "label": "DEBUG"
                },
                {
                    "value": "INFO",
                    "label": "INFO"
                },
                {
                    "value": "WARN",
                    "label": "WARN"
                },
                {
                    "value": "ERROR",
                    "label": "ERROR"
                },
                {
                    "value": "CRITICAL",
                    "label": "CRITICAL"
                }
            ],
            "defaultValue": "INFO",
            "mandatory": true
        }
    ],

    "roles": [
    ]
}
